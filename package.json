{
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/vue": "^2.0.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "husky": "^9.1.7",
    "vitepress": "^1.5.0",
    "vitepress-plugin-group-icons": "^1.6.1"
  },
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
